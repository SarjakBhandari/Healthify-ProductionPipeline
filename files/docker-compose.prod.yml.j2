version: '3.2'

services:
  postgres:
    image: postgres:{{ lookup('env', 'POSTGRES_VERSION') | default('13') }}
    environment:
      POSTGRES_USER: {{ lookup('env', 'DB_USER') }}
      POSTGRES_PASSWORD: {{ lookup('env', 'DB_PASSWORD') }}
      POSTGRES_DB: {{ lookup('env', 'DB_NAME') }}
    ports:
      - "{{ lookup('env', 'POSTGRES_PORT') | default('5432') }}:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data
    networks:
      - healthify_net
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ lookup('env', 'DB_USER') }}"]
      interval: 30s
      timeout: 10s
      retries: 5

  backend:
    image: {{ registry_ip }}:{{ registry_port }}/healthify-backend:{{ image_tag }}
    env_file:
      - .env
    ports:
      - "{{ lookup('env', 'API_PORT') }}:5050"
    depends_on:
      - postgres
    networks:
      - healthify_net
    deploy:
      replicas: 2
      restart_policy:
        condition: on-failure
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5050/health"]
      interval: 30s
      timeout: 10s
      retries: 5

  frontend:
    image: {{ registry_ip }}:{{ registry_port }}/healthify-frontend:{{ image_tag }}
    env_file:
      - .env
    ports:
      - "{{ lookup('env', 'FRONTEND_PORT') }}:5173"
    networks:
      - healthify_net
    deploy:
      replicas: 2
      restart_policy:
        condition: on-failure
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5173/health"]
      interval: 30s
      timeout: 10s
      retries: 5

volumes:
  pgdata:

networks:
  healthify_net:
    driver: overlay
