{
  "uid": "healthify_postgres",
  "title": "PostgreSQL Metrics",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 3,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Average Active Connections",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "avg(pg_stat_activity_count) by (datname)",
          "legendFormat": "{{datname}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "lines",
            "lineWidth": 2,
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "timeseries",
      "title": "Cache Hit Ratio (Overall)",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "avg(pg_stat_database_blks_hit) / avg(pg_stat_database_blks_hit + pg_stat_database_blks_read)",
          "legendFormat": "Cache Hit Ratio",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "lines",
            "lineWidth": 2,
            "fillOpacity": 15,
            "showPoints": "never"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0.9 },
              { "color": "green", "value": 0.99 }
            ]
          }
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    }
  ]
}
