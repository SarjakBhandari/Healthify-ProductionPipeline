{
  "uid": "healthify-backend",
  "title": "Healthify Backend Metrics",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "graph",
      "title": "HTTP Request Count",
      "targets": [
        {
          "expr": "sum by (method, route) (http_requests_total)",
          "legendFormat": "{{method}} {{route}}"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "HTTP Request Duration",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1m])) by (le, route))",
          "legendFormat": "95th percentile {{route}}"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "HTTP Error Count",
      "targets": [
        {
          "expr": "sum by (status, route) (http_errors_total)",
          "legendFormat": "{{status}} {{route}}"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Frontend Route Changes",
      "targets": [
        {
          "expr": "sum by (path) (frontend_route_change_total)",
          "legendFormat": "{{path}}"
        }
      ],
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
    }
  ]
}
